@model AccountViewModel

<div class="container mb-5" style="padding-top:50px">
    <div class="card" style="border:solid 2px">
        <div class="card-header fw-bold fs-5">
            Hesap Bilgileri
        </div>
        <div class="card-body">
            <form method="post" asp-controller="Account" asp-action="Update">
                
                <input type="hidden" asp-for="Id" />

                <div class="row gutters">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <h6 class="mb-2 text-warning fw-bold">Kişi Bilgileri</h6>
                    </div>

                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">

                        <div class="form-group mt-2">
                            <label asp-for="FirstName" class="mb-1"></label>
                            <input asp-for="FirstName" type="text" class="form-control" placeholder="Adınız...">
                            <span asp-validation-for="FirstName" class="text-danger mt-1 fw-bold"></span>

                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                        <div class="form-group mt-2">
                            <label asp-for="LastName" class="mb-1"></label>
                            <input asp-for="LastName" type="text" class="form-control" placeholder="Soyadınız...">
                               <span asp-validation-for="LastName" class="text-danger mt-1 fw-bold"></span>

                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                        <div class="form-group mt-2">
                            <label asp-for="Email" class="mb-1"></label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Eposta Adresiniz">
                               <span asp-validation-for="Email" class="text-danger mt-1 fw-bold"></span>

                        </div>
                    </div>
                </div>
                <div class="row gutters">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <h6 class="mt-3 mb-2 text-warning fw-bold">Adres Bilgileri</h6>
                    </div>
                    <div class="col-12">
                        <div class="form-group mt-2">
                            <label asp-for="Address" class="mb-1"></label>
                            <textarea asp-for="Address" class="form-control" rows="4" placeholder="..."></textarea>
                        </div>
                    </div>
                </div>
                <div class="row gutters">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="text-right mt-3">
                            <button type="submit" class="btn btn-warning">Güncelle</button>
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>